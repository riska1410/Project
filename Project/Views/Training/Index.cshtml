@model IEnumerable<Project.Models.Training>
@{
    ViewData["Title"] = "Training";
    var isAdmin = ViewBag.IsAdmin as bool? ?? false;
}
@{
    var user = Context.Session.GetString("UserName");
    var role = Context.Session.GetString("UserRole");
}

@if (role == "admin")
{
    <a asp-action="Create" class="btn btn-primary">Tambah Training</a>
}


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container mt-5">
    <h2 class="mb-4">Daftar Training</h2>

    @if (isAdmin)
    {
        <a class="btn btn-danger mb-3" asp-action="Create">
            <i class="fas fa-plus"></i> Tambah Training
        </a>
    }

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Judul</th>
                <th>Deskripsi</th>
                <th>Durasi</th>
                @if (isAdmin)
                {
                    <th>Aksi</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var training in Model)
            {
                <tr>
                    <td>@training.Title</td>
                    <td>@training.Description</td>
                    @if (isAdmin)
                    {
                        <td>
                            <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@training.Id"><i class="fas fa-edit"></i></a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@training.Id" onclick="return confirm('Yakin ingin menghapus?')"><i class="fas fa-trash"></i></a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
